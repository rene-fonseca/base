# architecture
arch=SPARC
arch_minor=UNSPECIFIED

# primitive type
unsigned_char=no

# size of primitive
char_size=1
short_size=2
int_size=4
long_size=4
long_long_size=8
pointer_size=4
wchar_size=4

# byte order
byte_order=BIG_ENDIAN
word_order=BIG_ENDIAN

# floating-point representation
float=IEEE_754_SINGLE_PRECISION
double=IEEE_754_DOUBLE_PRECISION
long_double=IEEE_QUADRUPLE_PRECISION

# os
os=SOLARIS
os_minor=0x020700

# _REENTRANT - selects additionally reentrant object
# __EXTENSIONS__ - specifies that the Solaris extensions are utilized
# _XOPEN_SOURCE=500 - specifies that the UNIX 98 functionality is utilized
# _LARGEFILE64_SOURCE - enables LFS prototypes

features="_REENTRANT=1 __EXTENSIONS__=1 _XOPEN_SOURCE=500 lfs:_LARGEFILE64_SOURCE=1"

# functions
functions="memchr memcmp memcpy memmove memset nanosleep readdir_r mbsrtowcs poll sigaction"

# apis
apis="aio lfs pthread pthread_semaphore pthread_rwlock regexp wide"

# libraries
libraries="X11 socket:socket socket:nsl rt pthread:pthread dl -:m -:c"
